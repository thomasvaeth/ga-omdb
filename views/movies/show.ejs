
	<div class="row">
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
			<h1><%= Title %></h1>
			<p>Year: <%= Year %></p>
			<p>Rated: <%= Rated %></p>
			<p>Genre: <%= Genre %></p>
			<p>Director: <%= Director %></p>
			<p>Stars: <%= Actors %></p>
			<p><%= Plot %></p>
			<p>IMDb rating: <%= imdbRating %> / 10</p>
			<p>Rotten Tomatoes Tomatometer: <%= tomatoMeter %>%</p>

			<form method="POST" action="/favorites">
				<input type="hidden" value="<%= imdbID + '_' + Title + '_' + Year + '_' + Director + '_' + Actors %>" name="id">
				<button type="submit" class="btn btn-lg btn-primary">Add to Favorites</button>
			</form>

		</div>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 response-hidden">
			<img class="image-details" src="<%= Poster %>" alt="Poster">
		</div>
	</div>

<div class="btn-center">
	<a href="javascript:history.back()"><button type="button" class="btn btn-lg btn-info">Back</button></a>
</div>