<div class="row">
	<div class="col-xs-12">
		<h2 class="comments-header">Add Comment for <%= favorite.title %>:</h2>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
		<p>
			<form action="/favorites/<%= favorite.id %>/comments" method="POST" role="search">
				<input class="form-control input-lg" type="text" placeholder="Author" name="author" autocomplete="off" required>
				<textarea class="form-control" placeholder="Write something..." name="comment" rows="3" required></textarea>
				<button class="btn btn-lg btn-primary btn-input" role="button" type="submit">Add Comment</button>
			</form>
		</p>
	</div>
</div>

<hr>

<div class="row">
	<div class="col-xs-12">
		<h2 class="comments-header">Other Comments for <%= favorite.title %>:
	</div>
</div>

<div class="row">
	<% comments.forEach(function(comment) { %>
		<div class="col-xs-12 col-sm-6">
			<div class="well">
				<p><%= comment.comment %></p>
				<h3><%= comment.author %></h3>
				<button class="btn btn-default" data-toggle="modal" data-target="#modal-<%= comment.id %>">Edit</button>
			</div>
		</div>
		<div class="modal fade" id="modal-<%= comment.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
		  <form action="/favorites/<%= favorite.id %>/comments/<%= comment.id %>" method="POST" role="search">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Edit Comment for <%= favorite.title %></h4>
		      </div>
		      <div class="modal-body">
			      <input class="form-control input-lg" type="text" value="<%= comment.author %>" name="author" autocomplete="off" required>
			      <textarea class="form-control" placeholder="Write something..." name="comment" rows="3" required><%=comment.comment %></textarea>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		        <button type="submit" class="btn btn-primary">Edit Comment</button>
		      </div>
		    </div>
		  </div>
		  </form>
		</div>
	<% }); %>
</div>

<hr>

<div class="btn-center">
	<a href="javascript:history.back()"><button type="button" class="btn btn-lg btn-info">Back</button></a>
</div>