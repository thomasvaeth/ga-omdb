<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h2 class="comments-header">Add Comment for <%= favorite.title %>:</h2>
	</div>
</div>

<div class="row">
	<div class="col-xs-10 col-sm-8 col-md-8 col-lg-8 col-xs-offset-1 col-sm-offset-2 col-md-offset-2 col-lg-offset-2">
		<p>
			<form action="/favorites/<%= favorite.id %>/comments" method="POST" role="search">
				<input class="form-control input-lg" type="text" placeholder="Author" name="author" autocomplete="off">
				<textarea class="form-control" placeholder="Write something..." name="comment" rows="3"></textarea>
				<button class="btn btn-lg btn-primary btn-input" role="button" type="submit">Add Comment</button>
			</form>
		</p>
	</div>
</div>

<hr>

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h2 class="comments-header">Other Comments for <%= favorite.title %>:
	</div>
</div>

<div class="row">
	<% comments.forEach(function(comment) { %>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
			<div class="well">
				<p><%= comment.comment %></p>
				<h3><%= comment.author %></h3>
			</div>
		</div>
	<% }) %>
</div>

<div class="btn-center">
	<a href="javascript:history.back()"><button type="button" class="btn btn-lg btn-info">Back</button></a>
</div>