<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h1 class="tags-header">Add tags for <%= favorite.title %>:</h1>
	</div>
</div>
<div class="row">
	<div class="col-xs-6 col-sm-4 col-md-4 col-lg-4 col-xs-offset-3 col-sm-offset-4 col-md-offset-4 col-lg-offset-4">
		<p>
			<form action="/favorites/<%= favorite.id %>/tags" method="POST" role="search" class="tags-form">
				<input class="form-control input-lg tag-input" type="text" placeholder="Add A Tag" name="tag" autocomplete="off">
				<button class="btn btn-lg btn-primary tags-button" role="button" type="submit">Add Tag</button>
			</form>
		</p>
	</div>
</div>